{
	"$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "master"
	},
	"files": {
		"includes": [
			"**",
			"!**/docs/src/content/snippets/**/*.ts",
			"!**/docs/src/**/*.astro",
			"!**/docs/.astro/**/*",
			"!**/examples/**/*/public/**/*.js"
		],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80,
		"bracketSpacing": true
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn"
			},
			"complexity": {
				"useLiteralKeys": "off"
			},
			"suspicious": {
				"noEmptyBlockStatements": "error"
			},
			"style": {
				"useTemplate": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteProperties": "asNeeded",
			"trailingCommas": "es5",
			"semicolons": "always",
			"arrowParentheses": "always",
			"quoteStyle": "double",
			"bracketSpacing": false
		}
	}
}
