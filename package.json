	"engines": {
		"node": ">=20",
		"pnpm": ">=9"
	},
	"devDependencies": {
		"@types/eventsource": "^1.1.11",
		"@types/express": "^4.17.16",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"eslint": "^8.32.0",
		"eslint-plugin-tsdoc": "^0.2.17",
		"eventsource": "^2.0.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.3",
		"rimraf": "^4.1.2",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4",
		"vitest": "^0.28.2",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1"
	},
	"packageManager": "pnpm@9.12.2"
}
